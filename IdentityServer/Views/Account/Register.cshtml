@model RegisterViewModel

<div class="register-page">
    <div class="lead">
        <h1>Register New Account</h1>
        <p>Please provide your new account details</p>
    </div>
    
    <partial name="_ValidationSummary"/>
    
    <div class="row">
        
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Register Account</h2>
                </div>
                
                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl"/>

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input class="form-control" placeholder="Full Name" asp-for="Name" autofocus/>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailAddress"></label>
                            <input class="form-control" placeholder="Email Address" asp-for="EmailAddress"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Username"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off"/>
                        </div>
                        
                        <button class="btn btn-primary" name="button" value="register">Register New Account</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
                

            </div>
        </div>
    </div>
</div>